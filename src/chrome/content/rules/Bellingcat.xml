<ruleset name="Bellingcat">
    <target host="bellingcat.com" />
    <target host="www.bellingcat.com" />

    <rule from="^https?://bellingcat\.com/"
        to="https://www.bellingcat.com/" />
    <rule from="^http://([^/:@]+)\.bellingcat\.com/"
        to="https://$1.bellingcat.com/" />
</ruleset>
