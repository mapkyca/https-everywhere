<!--
	Fully covered subdomains:

		- (www.)
		- lists
		- qa

-->
<ruleset name="Linux Containers.org">

	<target host="linuxcontainers.org" />
	<target host="*.linuxcontainers.org" />


	<rule from="^http://((?:lists|qa|www)\.)?linuxcontainers\.org/"
		to="https://$1linuxcontainers.org/" />

</ruleset>
