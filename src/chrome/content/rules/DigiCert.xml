<!--
	Nonfunctional subdomains

		- ocsp

-->
<ruleset name="DigiCert">

	<target host="digicert.com" />
	<target host="*.digicert.com" />


	<securecookie host="^.*\.digicert\.com$" name=".*" />


	<rule from="^http://((?:content|edge[1-4]|www)\.)?digicert\.com/"
		to="https://$1digicert.com/" />

</ruleset>
