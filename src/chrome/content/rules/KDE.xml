	<!--securecookie host="^\.kde\.org$" name="^(incap_ses_\d+|visid_incap)_\d+$" /-->
	<securecookie host="^(?!userbase\.).+\.kde\.org$" name=".+" />
	<securecookie host="^userbase\.kde\.org$" name="^__utm\w+$" />


	<rule from="^http://(akademy|akademy201[023]|amarok|blogs|bugs|(?:admin|sandbox)\.bugs|cdn|community|conf|dot|forum|identity|mail|nepomuk|news|projects|relate|season|sprints|sysadmin|techbase|userbase)\.kde\.org/"
