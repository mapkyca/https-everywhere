<!--
	CDN buckets:

		- rotesource-nigeria360.netdna-ssl.com

-->
<ruleset name="Rotesource.com">

	<target host="rotesource.com" />
	<target host="*.rotesource.com" />


	<!--	Server doesn't set Secure for:
						-->
	<securecookie host="^(?:w*\.)?rotesource\.com$" name=".+" />


	<rule from="^http://(www\.)?rotesource\.com/"
		to="https://$1rotesource.com/" />

</ruleset>
