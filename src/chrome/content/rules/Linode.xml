<ruleset name="Linode">
  <target host="linode.com" />
  <target host="*.linode.com" />

  <securecookie host="^.*linode\.com$" name=".*"/>

  <rule from="^http://linode\.com/" to="https://www.linode.com/"/>
  <rule from="^http://(blog|forum|library|stats|manager|www)\.linode\.com/" to="https://$1.linode.com/"/>

	<rule from="^http://status\.linode\.com/"
		to="https://linode.statuspage.io/" />
</ruleset>
