<ruleset name="Platinum Performance.com">

	<target host="myplatinumpak.com" />
	<target host="*.myplatinumpak.com" />
	<target host="platinumperformance.com" />
	<target host="*.platinumperformance.com" />


	<!--	Server doesn't secure:
					-->
	<securecookie host="^\.myplatinumpak\.com$" name=".+" />
	<securecookie host="^(?:w*\.)?platinumperformance\.com$" name=".+" />


	<rule from="^http://(www\.)?(myplatinumpak|platinumperformance)\.com/"
		to="https://$1$2.com/" />

</ruleset>
